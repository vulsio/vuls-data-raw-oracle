	"metadata": {
		"title": "\nELSA-2010-0181:  brltty security and bug fix update (LOW)\n",
		"affected": {
			"family": "unix",
			"platform": [
				"Oracle Linux 5"
			]
		},
		"reference": [
			{
				"source": "elsa",
