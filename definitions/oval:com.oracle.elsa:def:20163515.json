	"metadata": {
		"title": "\nELSA-2016-3515:  glibc security update (CRITICAL)\n",
		"affected": {
			"family": "unix",
			"platform": [
				"Oracle Linux 7"
			]
		},
		"reference": [
			{
				"source": "elsa",
