	"metadata": {
		"title": "\nELSA-2023-0100:  systemd security and bug fix update (MODERATE)\n",
		"affected": {
			"family": "unix",
			"platform": [
				"Oracle Linux 8"
			]
		},
		"reference": [
			{
				"source": "elsa",
