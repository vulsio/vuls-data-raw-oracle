	"metadata": {
		"title": "\nELSA-2011-0600:  dovecot security and enhancement update (MODERATE)\n",
		"affected": {
			"family": "unix",
			"platform": [
				"Oracle Linux 6"
			]
		},
		"reference": [
			{
